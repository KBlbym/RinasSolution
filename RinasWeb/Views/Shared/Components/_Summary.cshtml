@model dynamic
<section class="summary container-fluid mb-0" style="background-image:url(@Model.img)">
    <div class="row overlay">
        <div class="col-md-5 p-lg-5 mx-auto my-4">
            <h2 class="display-4 fw-normal">@Model.title</h2>
            <p class="lead fw-normal">@Model.description</p>
        </div>
        @if (Model.type.ToLower() == "form")
        {
    <div class="col-md-6 p-lg-6 mx-auto my-3 mx-2 d-flex align-items-center">
        <div class="w-100">
            <div class="input-group mb-3 mt-4">
                <input type="text" class="form-control" placeholder="Enter email" aria-label="Recipient's username" aria-describedby="button-addon2">
                <button class="btn btn-success border-rad" type="button" id="button-addon2">Subscribe</button>
            </div>
        </div>
    </div>
        }
    </div>

</section>