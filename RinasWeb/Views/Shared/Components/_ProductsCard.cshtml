@model IEnumerable<Product>

@{
        var rand = new Random();
        string[] bgImgs = {"/img/hero_bg_6.jpg", "/img/hero_bg_1.jpg", "/img/hero_bg_2.jpg",
                "/img/hero_bg_4.jpg", "/img/hero_bg_5.jpg" };
}

<section class="container productscard-container">
    <div class="row">
        <div class="MultiCarousel" data-items="1,2,3,4" data-slide="1" id="MultiCarousel" data-interval="1000">
            <div class="MultiCarousel-inner">
                @foreach (var item in Model)
                {
                    <div class="item">
                        <div class="card mb-2">
                            <div class="bg-animate" style="background-image:url(@bgImgs[rand.Next(0,bgImgs.Length)]"></div> 
                            <div class="card-img">
                                <div class="card-overlay ">
                                    <div class="icon-group">
                                        <a href="#" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                                        <a href="#" class="btn btn-primary"><i class="far fa-heart"></i></a>
                                        <a href="#" class="btn btn-primary"><i class="fas fa-share-alt"></i></a>
                                    </div>

                                </div>
                                <img class="card-img-top" src="@item.Image"
                                     alt="Card image cap">
                            </div>

                            <div class="card-body">
                                <h4 class="card-title">@item.Name</h4>
                                <div class="rating">
                                    @{
                                        
                                        int randomNumber = rand.Next(1, 6);
                                    }
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        if (randomNumber <= i)
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-star"></i>
                                        }


                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button class="btn btn-primary leftLst"><</button>
            <button class="btn btn-primary rightLst">></button>
        </div>
    </div>
</section>